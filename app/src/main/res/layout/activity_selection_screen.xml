<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SelectionScreen">


    <ImageView
        android:id="@+id/imageViewGlobeSelect"
        android:layout_width="240dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Topic"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGlobeSelect"
        app:layout_constraintVertical_bias="0.024" />

    <ImageView
        android:id="@+id/btnRegion"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnNation"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnNation"
        app:layout_constraintTop_toBottomOf="@+id/btnNation"
        app:layout_constraintVertical_bias="0.377"
        app:srcCompat="@drawable/regionalism" />

    <ImageView
        android:id="@+id/btnUN"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnSociety"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSociety"
        app:layout_constraintTop_toTopOf="@+id/btnRegion"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/un" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:text="Economic \nGlobalization"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toTopOf="@+id/btnNation"
        app:layout_constraintEnd_toEndOf="@+id/btnEcon"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/btnEcon"
        app:layout_constraintTop_toBottomOf="@+id/btnEcon"
        app:layout_constraintVertical_bias="0.485" />

    <ImageView
        android:id="@+id/btnEcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGlobeSelect"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGlobe"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/economy" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Concepts"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnGlobe"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/btnGlobe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Society in a\n Global Age"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toTopOf="@+id/btnUN"
        app:layout_constraintEnd_toEndOf="@+id/btnSociety"
        app:layout_constraintStart_toStartOf="@+id/btnSociety"
        app:layout_constraintTop_toBottomOf="@+id/btnSociety"
        app:layout_constraintVertical_bias="0.379" />

    <ImageView
        android:id="@+id/btnNation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnEcon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnEcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/nation" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="International Law and  the UN"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnUN"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/btnUN"
        app:layout_constraintTop_toBottomOf="@+id/btnUN"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regionalism"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnRegion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnRegion"
        app:layout_constraintTop_toBottomOf="@+id/btnRegion"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/btnGlobe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/btnEcon"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="@+id/imageViewGlobeSelect"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.613"
        app:srcCompat="@drawable/globalization" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nation in a\n Global Age"
        android:textColor="#2196F3"
        app:fontFamily="@font/alegreya_sc_bold"
        app:layout_constraintBottom_toTopOf="@+id/btnRegion"
        app:layout_constraintEnd_toEndOf="@+id/btnNation"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnNation"
        app:layout_constraintTop_toBottomOf="@+id/btnNation"
        app:layout_constraintVertical_bias="0.37" />

    <ImageView
        android:id="@+id/btnSociety"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnGlobe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGlobe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597"
        app:srcCompat="@drawable/society" />

    <ImageView
        android:id="@+id/btnBackSelect"
        android:layout_width="29dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>