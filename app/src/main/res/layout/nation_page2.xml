        android:id="@+id/textView66"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="People see themselves as part of a group with common history, religion, language, and tradition. Nations present a degree of cultural heterogenity."
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView63"
        app:layout_constraintTop_toBottomOf="@+id/textView63"
